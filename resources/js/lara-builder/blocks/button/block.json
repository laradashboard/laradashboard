{
    "type": "button",
    "label": "Button",
    "category": "Content",
    "icon": "mdi:button-cursor",
    "description": "Add a call-to-action button",
    "keywords": ["button", "cta", "link", "action"],
    "contexts": ["email", "page", "campaign"],
    "supports": {
        "align": true,
        "bold": true,
        "italic": true,
        "underline": true,
        "clearFormat": true,
        "colors": true,
        "spacing": true,
        "layout": true,
        "html": true,
        "duplicate": true,
        "remove": true
    },
    "defaultProps": {
        "text": "Click Here",
        "link": "#",
        "backgroundColor": "#635bff",
        "textColor": "#ffffff",
        "borderRadius": "6px",
        "padding": "12px 24px",
        "align": "center",
        "fontSize": "16px",
        "fontWeight": "600"
    },
    "properties": [
        {
            "name": "text",
            "type": "text",
            "label": "Button Text",
            "placeholder": "Click Here"
        },
        {
            "name": "link",
            "type": "url",
            "label": "Link URL",
            "placeholder": "https://..."
        },
        {
            "name": "align",
            "type": "align",
            "label": "Alignment"
        },
        {
            "name": "backgroundColor",
            "type": "color",
            "label": "Background Color"
        },
        {
            "name": "textColor",
            "type": "color",
            "label": "Text Color"
        },
        {
            "name": "fontSize",
            "type": "select",
            "label": "Font Size",
            "options": [
                { "value": "14px", "label": "Small (14px)" },
                { "value": "16px", "label": "Medium (16px)" },
                { "value": "18px", "label": "Large (18px)" },
                { "value": "20px", "label": "X-Large (20px)" }
            ]
        },
        {
            "name": "fontWeight",
            "type": "select",
            "label": "Font Weight",
            "options": [
                { "value": "normal", "label": "Normal" },
                { "value": "500", "label": "Medium" },
                { "value": "600", "label": "Semi Bold" },
                { "value": "bold", "label": "Bold" }
            ]
        },
        {
            "name": "borderRadius",
            "type": "select",
            "label": "Border Radius",
            "options": [
                { "value": "0", "label": "None" },
                { "value": "4px", "label": "Small (4px)" },
                { "value": "6px", "label": "Medium (6px)" },
                { "value": "8px", "label": "Large (8px)" },
                { "value": "12px", "label": "X-Large (12px)" },
                { "value": "9999px", "label": "Pill" }
            ]
        },
        {
            "name": "padding",
            "type": "select",
            "label": "Padding",
            "options": [
                { "value": "8px 16px", "label": "Small" },
                { "value": "12px 24px", "label": "Medium" },
                { "value": "16px 32px", "label": "Large" },
                { "value": "20px 40px", "label": "X-Large" }
            ]
        }
    ]
}
