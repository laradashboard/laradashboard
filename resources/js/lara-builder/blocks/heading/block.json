{
    "type": "heading",
    "label": "Heading",
    "category": "Content",
    "icon": "mdi:format-header-1",
    "description": "Add a heading to your content",
    "keywords": ["heading", "title", "h1", "h2", "h3"],
    "contexts": ["email", "page", "campaign"],
    "supports": {
        "align": true,
        "justify": true,
        "bold": true,
        "italic": true,
        "underline": true,
        "clearFormat": true,
        "headingLevel": true,
        "colors": true,
        "spacing": true,
        "layout": true,
        "html": true,
        "duplicate": true,
        "remove": true
    },
    "defaultProps": {
        "text": "Your Heading Here",
        "level": "h1",
        "align": "left",
        "color": "#333333",
        "fontSize": "32px",
        "fontWeight": "bold",
        "lineHeight": "1.2",
        "letterSpacing": "0"
    },
    "properties": [
        {
            "name": "text",
            "type": "text",
            "label": "Heading Text",
            "placeholder": "Enter heading text..."
        },
        {
            "name": "level",
            "type": "select",
            "label": "Heading Level",
            "options": [
                { "value": "h1", "label": "H1" },
                { "value": "h2", "label": "H2" },
                { "value": "h3", "label": "H3" },
                { "value": "h4", "label": "H4" },
                { "value": "h5", "label": "H5" },
                { "value": "h6", "label": "H6" }
            ]
        },
        {
            "name": "align",
            "type": "align",
            "label": "Alignment"
        },
        {
            "name": "color",
            "type": "color",
            "label": "Text Color"
        },
        {
            "name": "fontSize",
            "type": "select",
            "label": "Font Size",
            "options": [
                { "value": "14px", "label": "Small (14px)" },
                { "value": "18px", "label": "Medium (18px)" },
                { "value": "24px", "label": "Large (24px)" },
                { "value": "32px", "label": "X-Large (32px)" },
                { "value": "48px", "label": "XX-Large (48px)" },
                { "value": "64px", "label": "Huge (64px)" }
            ]
        },
        {
            "name": "fontWeight",
            "type": "select",
            "label": "Font Weight",
            "options": [
                { "value": "normal", "label": "Normal" },
                { "value": "500", "label": "Medium" },
                { "value": "600", "label": "Semi Bold" },
                { "value": "bold", "label": "Bold" },
                { "value": "800", "label": "Extra Bold" }
            ]
        },
        {
            "name": "lineHeight",
            "type": "select",
            "label": "Line Height",
            "options": [
                { "value": "1", "label": "Tight (1)" },
                { "value": "1.2", "label": "Normal (1.2)" },
                { "value": "1.5", "label": "Relaxed (1.5)" },
                { "value": "2", "label": "Loose (2)" }
            ]
        }
    ]
}
